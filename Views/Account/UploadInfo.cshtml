@model IEnumerable<MercyProject.Models.Galleries>
@{
    var displayImage= "~/images/";
} 
<p>
    <a asp-action="Gallery">Add Product</a>
</p>


<table class="table table-responsive">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Photo)
            </th>
            @*<th></th>*@
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Photo)
            </td>
           <td> 
               <img src="@(displayImage + item.Photo)  " asp-append-version="true" height="150" width="150"/>
               </td>
            <td>
                <a asp-action="Edit" asp-controller="Account" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="UploadDetails" asp-controller="Home" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-controller="Account" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
