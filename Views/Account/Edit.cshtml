@model MercyProject.ViewModel.ViewEditModel

<h4 class="text-center">Edit Page</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form enctype="multipart/form-data" asp-action="Edit" asp-controller="Account">
            <input hidden asp-for="Id">
            <input hidden asp-for="CurrentPhoto">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <br>
            <img src="@("~/images/"+Model.CurrentPhoto)" asp-append-version="true" height="150" width="150" />
            <br>
            <div class="form-group custom-file">
                <label asp-for="Photo" class="col-sm-2 col-form-label"></label>
                <input asp-for="Photo" class="form-control custom-file-input input" />
                <label asp-for="Photo" class="custom-file-label">Choose Another File...</label>
                @*<span asp-validation-for="Photo" class="text-danger"></span>*@
            </div>
            <br><br>
            <div class="form-group">
                <input type="submit" value="Upload" class="btn btn-primary" />
                <a asp-action="UploadInfo" asp-controller="Account" class="btn btn-primary">Cancel</a>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        $(document).ready(function () {
            $('.input').on("change", function () {
                var fileName = $(this).val().split("\\").pop();
                $(this).next('.custom-file-label').html(fileName);
            })
            //alert("sdfd")
        })
    </script>
}